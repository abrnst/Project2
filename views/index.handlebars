<div id="home">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 col s12 col-md-offset-3">
                            <br>
                            <br>
                            <button class=" pink darken-4 btn pulse waves-effect waves-light float-right update pulse"><a href="/logout">
        LOGOUT<i class="material-icons right">send</i></a></button>
                        </div>
                    </div>
                </div>

                <br>
                <br>
                <h1>{{msg}} <span class="member-name"></span></h1>
                <br>
                <br>

                <h2>MuviNite Events</h2>
                <br>
                <br>
                <ul id="events-list" class="pink darken-4 list-group hoverable">
                    {{#each events}}
                    <li data-id="{{this.id}}" class="list-group-item">
                        <p><strong>Event Name : </strong><a id="namelink" href="event/{{this.id}}">{{this.name}}</a></p>
                        <p><strong>Date and Time :</strong> {{this.dateAndTime}}</p>
                        <p><strong>Host :</strong> {{this.fullname}}</p>

                        <button class=" pink darken-4 btn pulse float-right update pulse"><a href="event/{{this.id}}">
        More about this Event<i class="material-icons right">send</i></a></button>
                    </li>
                    {{/each}}
                </ul>

                <br>
                <br>
                <button class=" pink darken-4 btn pulse waves-effect waves-light float-right update pulse"><a href="/newevent">
        Create a New Event<i class="material-icons right">send</i></a></button>

                <br>
                <br>
                <br>
                <br>
                <br>
                <br>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<script src="/js/members.js"></script>


